<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/loginMainLayout">
    <ImageView
            android:id="@+id/loginImgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/furniture"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="50dp"
            android:hint="@string/username"
            android:gravity="center"
            app:boxCollapsedPaddingTop="30dp"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:startIconDrawable="@drawable/ic_person_24">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/loginEditTextUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                android:inputType="textFilter"
                android:maxLength="16"/>
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="50dp"
            android:hint="@string/password"
            android:gravity="center"
            app:boxCollapsedPaddingTop="30dp"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="password_toggle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:startIconDrawable="@drawable/ic_lock_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/loginEditTextPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="50dp"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890/*-+.~!@#$%^()"
                android:inputType="textPassword"
                android:maxLength="21"/>
        </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Login"
            android:layout_margin="10dp">

        </com.google.android.material.button.MaterialButton>


    <TextView
            android:id="@+id/loginSignUp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/loginSignUp"
            android:gravity="center"/>

    <TextView
            android:id="@+id/loginBrowse"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/loginBrowse"
            android:gravity="center"/>

</LinearLayout>